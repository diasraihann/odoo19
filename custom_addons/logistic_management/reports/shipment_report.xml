<odoo>
    <!-- Report Action untuk Shipment Detail -->
    <record id="shipment_report" model="ir.actions.report">
        <field name="name">Shipment Detail</field>
        <field name="model">logistic.shipment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">logistic_management.shipment_report_document</field>
        <field name="report_file">logistic_management.shipment_report_document</field>
        <field name="binding_model_id" ref="model_logistic_shipment"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Template Report Shipment Detail dengan Tracking History -->
    <template id="shipment_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header Report -->
                        <div class="text-center mb32">
                            <h2>Shipment Detail Report</h2>
                            <p class="text-muted">Generated on <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                        </div>

                        <!-- Shipment Information -->
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <h4 class="mb16">Shipment Information</h4>
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td width="40%"><strong>Shipment ID:</strong></td>
                                        <td><span t-field="o.shipment_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Reference:</strong></td>
                                        <td><span t-field="o.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Service Type:</strong></td>
                                        <td><span t-field="o.service_type"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Weight:</strong></td>
                                        <td><span t-field="o.weight"/> kg</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <h4 class="mb16">Status &amp; Dates</h4>
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td width="40%"><strong>Status:</strong></td>
                                        <td>
                                            <span t-field="o.status" class="badge badge-pill"
                                                  t-att-class="'badge-info' if o.status == 'draft' else 'badge-warning' if o.status == 'in_transit' else 'badge-success'"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Due Date:</strong></td>
                                        <td><span t-field="o.due_date"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Last Update:</strong></td>
                                        <td><span t-field="o.update_date"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Parties Information -->
                        <div class="row mb32">
                            <div class="col-6">
                                <h4 class="mb16">Sender</h4>
                                <div class="well">
                                    <span t-field="o.sender"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="mb16">Receiver</h4>
                                <div class="well">
                                    <span t-field="o.receiver"/>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="row mb32">
                            <div class="col-12">
                                <h4 class="mb16">Description</h4>
                                <div class="well">
                                    <span t-field="o.description"/>
                                </div>
                            </div>
                        </div>

                        <!-- Tracking History -->
                        <div class="row">
                            <div class="col-12">
                                <h4 class="mb16">Tracking History</h4>
                                <t t-if="o.tracking_id">
                                    <table class="table table-sm table-bordered">
                                        <thead style="background-color: #f8f9fa;">
                                            <tr>
                                                <th>Tracking ID</th>
                                                <th>Timestamp</th>
                                                <th>Drop Point</th>
                                                <th>Location</th>
                                                <th>Status</th>
                                                <th>Responsible</th>
                                                <th>Note</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.tracking_id" t-as="tracking">
                                                <tr>
                                                    <td><span t-field="tracking.tracking_id"/></td>
                                                    <td><span t-field="tracking.timestamp" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/></td>
                                                    <td><span t-field="tracking.drop_point"/></td>
                                                    <td><span t-field="tracking.location"/></td>
                                                    <td>
                                                        <span t-field="tracking.status" class="badge badge-pill"
                                                              t-att-class="'badge-info' if tracking.status == 'drop_off' else 
                                                                          'badge-warning' if tracking.status in ['in_transit', 'arrived_dc', 'out_for_delivery'] else 
                                                                          'badge-success'"/>
                                                    </td>
                                                    <td><span t-field="tracking.responsible"/></td>
                                                    <td><span t-field="tracking.note"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-else="">
                                    <div class="alert alert-info">
                                        <p class="mb0">No tracking history available for this shipment.</p>
                                    </div>
                                </t>
                            </div>
                        </div>

                        <!-- Footer dengan Total Tracking -->
                        <div class="row mt32">
                            <div class="col-12 text-right">
                                <p class="text-muted">
                                    <strong>Total Tracking Records:</strong> <span t-esc="len(o.tracking_id)"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>