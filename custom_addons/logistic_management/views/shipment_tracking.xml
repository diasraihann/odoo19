<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_shipment_tracking_list" model="ir.ui.view">
        <field name="name">shipment.tracking.list</field>
        <field name="model">shipment.tracking</field>
        <field name="arch" type="xml">
            <list>
                <field name="tracking_id"/>
                <field name="shipment_id"/>
                <field name="timestamp"/>
                <field name="drop_point"/>
                <field name="location"/>
                <field name="status"/>
                <field name="responsible"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_shipment_tracking_form" model="ir.ui.view">
        <field name="name">shipment.tracking.form</field>
        <field name="model">shipment.tracking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tracking_id" readonly="1"/>
                        <field name="shipment_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="timestamp" readonly="1"/>
                        <field name="drop_point"/>
                        <field name="location"/>
                        <field name="status"/>
                        <field name="note"/>
                        <field name="responsible"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_shipment_tracking_search" model="ir.ui.view">
        <field name="name">shipment.tracking.search</field>
        <field name="model">shipment.tracking</field>
        <field name="arch" type="xml">
            <search>
                <field name="tracking_id"/>
                <field name="shipment_id"/>
                <field name="status"/>
                <field name="drop_point"/>
                <field name="location"/>
                <field name="timestamp"/>
                
                <!-- Filter preset -->
                <filter string="Dropped Off" name="filter_drop_off" domain="[('status','=','drop_off')]"/>
                <filter string="In Transit" name="filter_in_transit" domain="[('status','=','in_transit')]"/>
                <filter string="Arrived DC" name="filter_arrived_dc" domain="[('status','=','arrived_dc')]"/>
                <filter string="Out for Delivery" name="filter_out_for_delivery" domain="[('status','=','out_for_delivery')]"/>
                <filter string="Delivered" name="filter_delivered" domain="[('status','=','delivered')]"/>
            </search>
        </field>
    </record>

    <!-- Action Window -->
    <record id="shipment_tracking_action" model="ir.actions.act_window">
        <field name="name">Shipment Tracking</field>
        <field name="res_model">shipment.tracking</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_shipment_tracking_search"/>
    </record>

    <!-- Root Menu dengan Action Langsung -->
    <menuitem id="shipment_tracking_root_menu" 
              name="Shipment Tracking" 
              parent="logistic_root_menu" 
              action="shipment_tracking_action"/>
</odoo>